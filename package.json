{
  "name": "@tesserakit/core",
  "version": "0.0.1",
  "description": "Core utilities for building entity-driven applications with TesseraKit",
  "author": "Alejandro C. Luque",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/TesseraKit/core.git"
  },
  "bugs": {
    "url": "https://github.com/TesseraKit/core/issues"
  },
  "homepage": "https://github.com/TesseraKit",
  "keywords": [
    "tesserakit",
    "effect",
    "effect-ts",
    "entity",
    "schema",
    "crud",
    "typescript",
    "bun",
    "nodejs"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index. d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./id": {
      "bun": "./src/id/index.ts",
      "import": {
        "types": "./dist/id/index.d.ts",
        "default": "./dist/id/index.js"
      },
      "require": {
        "types": "./dist/id/index.d.cts",
        "default": "./dist/id/index.cjs"
      }
    },
    "./schema": {
      "bun": "./src/schema/index.ts",
      "import": {
        "types": "./dist/schema/index.d.ts",
        "default": "./dist/schema/index.js"
      },
      "require": {
        "types": "./dist/schema/index.d.cts",
        "default": "./dist/schema/index.cjs"
      }
    },
    "./user": {
      "bun": "./src/user/index.ts",
      "import": {
        "types": "./dist/user/index.d.ts",
        "default": "./dist/user/index.js"
      },
      "require": {
        "types": "./dist/user/index.d.cts",
        "default": "./dist/user/index.cjs"
      }
    },
    "./errors": {
      "bun": "./src/errors/index.ts",
      "import": {
        "types": "./dist/errors/index.d.ts",
        "default": "./dist/errors/index.js"
      },
      "require": {
        "types": "./dist/errors/index.d.cts",
        "default": "./dist/errors/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "build:check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:bun": "bun test",
    "lint": "eslint src --ext . ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "clean": "rm -rf dist coverage . turbo node_modules/. cache",
    "prepublishOnly": "pnpm run build && pnpm run test",
    "release": "pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.7.0",
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "tsup": "^8.5.1",
    "vitest": "^4.0.17"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@effect/schema": "^0.75.5",
    "effect": "^3.19.14"
  }
}
